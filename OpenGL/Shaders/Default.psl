#version 450 core
#include "Default.hsl"

in vec2         TexUV;
flat in float   Depth;
flat in int     EntityIndex;

out vec4 OutputColor;

uniform bool HasTexture;
uniform vec4 BaseColor;



void main(void)
{
    OutputColor = texture(PerEntityData[EntityIndex].Texture, TexUV);
    OutputColor.a = 1.0;
}
