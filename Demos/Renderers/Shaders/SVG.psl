#version 440 core

out vec4 OutputColor;
in vec4 InputColor;

layout(binding = 0, std140) uniform ColorBuffer
{
    vec4 ColorData[1024];
};


uniform int DrawID;



void main(void)
{
    OutputColor = ColorData[DrawID];
    OutputColor.a = InputColor.a;
}
