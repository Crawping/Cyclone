#version 450 core
#include "Default.hsl"

in vec2     TexUV;
flat in int EntityIndex;

out vec4 OutputColor;



void main(void)
{
    OutputColor = PerEntityData[EntityIndex].Color - gl_FragCoord.z * 0.75;
    OutputColor = normalize(OutputColor);
}
