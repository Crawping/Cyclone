struct PerEntity
{
    mat4        World;
    vec4        Color;
};

struct PerFrame
{
    mat4        Projection;
    mat4        View;
    vec3        CameraPosition;
    uint        Time;
};

layout(binding = 0, std140) uniform PerEntityBuffer
{
    PerEntity PerEntityData[128];
};

layout(binding = 1, std140) uniform PerFrameBuffer
{
    PerFrame PerFrameData[128];
};