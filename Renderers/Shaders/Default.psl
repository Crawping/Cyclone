#version 450 core
#include "Default.hsl"

out vec4 OutputColor;

in PixelShaderInput
{
    flat int    EntityIndex;
    vec2        TexUV;
} Input;




void main(void)
{
    EntityData ids      = Entities[Input.EntityIndex];
    MaterialData mat    = Materials[ids.MaterialIndex];

    OutputColor = mat.IsTextured            ? 
        texture(mat.Texture, Input.TexUV)   : 
        mat.PrimaryColor;
}
